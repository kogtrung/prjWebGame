@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Error</h2>
                </div>
                <div class="card-body py-5">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-warning mb-4">
                            <p class="mb-0">@Model.Message</p>
                        </div>
                    }
                    else
                    {
                        <h3 class="mb-3">An error occurred while processing your request.</h3>
                    }

                    <div class="my-4">
                        <img src="/images/error-icon.png" alt="Error" width="100" class="mb-3" onerror="this.style.display='none'">
                        
                        @if (Model.ShowRequestId)
                        {
                            <p class="text-muted small">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                    </div>

                    <div class="action-buttons mt-4">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="bi bi-house-door-fill me-1"></i> Return to Home
                        </a>
                        <button onclick="window.history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Go Back
                        </button>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="help-section small text-muted">
                        <p class="mb-0">Looking for something? Try our <a href="/Game">games catalog</a> or <a href="/Game/Upcoming">upcoming releases</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .action-buttons .btn {
        min-width: 150px;
    }
    .card {
        border-radius: 8px;
        overflow: hidden;
    }
    .card-header {
        border-bottom: none;
    }
    .alert-warning {
        background-color: #fff8e1;
        border-color: #ffe0b2;
        color: #ff8f00;
    }
    code {
        padding: 3px 6px;
        background: #f5f5f5;
        border-radius: 4px;
    }
</style> 