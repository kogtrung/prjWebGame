@model IEnumerable<WebGame.Models.GameCategory>
@if (User.IsInRole("Admin")){

<h2>Danh sách thể loại game</h2>

<a class="btn btn-success mb-3" asp-action="Add">➕ Thêm thể loại mới</a>

<table class="table table-bordered">
    <thead>
        <tr>
                <th>Tên thể loại</th>
                <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            ❌ Xoá
                        </a>
                    </td>
            </tr>
        }
    </tbody>

</table>


}
else
{
	<p class="text-danger">Bạn không có quyền quản lý bài viết.</p>
}